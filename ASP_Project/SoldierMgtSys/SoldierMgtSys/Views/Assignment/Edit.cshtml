@model SoldierMgtSys.Models.UpdateAssignmentViewModel
@{
    Layout = "_AdminLayout";
}
<form asp-action="Edit" method="post">
    <div class="mb-3">
        <label for="" class="form-label">Assignment ID </label>
        <input type="text" class="form-control" asp-for="AssignmentId" readonly>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Assignment Details: </label>
        <input type="text" class="form-control" asp-for="AssignmentDetails">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Start Date: </label>
        <input type="date" class="form-control" asp-for="StartDate">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">End Date: </label>
        <input type="date" class="form-control" asp-for="EndDate">
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <button type="submit" class="btn btn-danger" asp-controller="Assignment" asp-action="Delete">Delete</button>
</form>