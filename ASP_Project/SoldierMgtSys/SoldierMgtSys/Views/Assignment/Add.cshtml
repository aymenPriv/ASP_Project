@model SoldierMgtSys.Models.AddAssignmentViewModel

@{
    Layout = "_AdminLayout";
}

<form method="post" action="Add">

    <div class="mb-3">
        <label for="" class="form-label">Assignment Details: </label>
        <input type="text" class="form-control" asp-for="AssignmentDetails">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Start Date: </label>
        <input type="date" class="form-control" asp-for="StartDate">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">End Date: </label>
        <input type="date" class="form-control" asp-for="EndDate" required>
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Soldier ID: </label>
        <input type="number" class="form-control" asp-for="SoldierId">
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>