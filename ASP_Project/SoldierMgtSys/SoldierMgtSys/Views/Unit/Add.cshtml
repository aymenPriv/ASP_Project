@model SoldierMgtSys.Models.AddUnitViewModel;

@{
    Layout = "_AdminLayout";
}

<form method="post" action="Add">


    <div class="mb-3">
        <label for="" class="form-label">Unit Name: </label>
        <input type="text" class="form-control" asp-for="UnitName">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Location: </label>
        <input type="text" class="form-control" asp-for="Location">
    </div>
    
    <button type="submit" class="btn btn-primary">Add</button>
</form>